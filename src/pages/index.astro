---

import "../../public/styles/global.css";
import IconLink from "../components/IconLink.astro";
import Layout from "../components/Layout.astro";
let title = "Desarrollo web Frontend Backend"
let subtitle = "T√©cnico en Programaci√≥n y An√°lisis de Sistemas"
let email = "erick.olivares.gonzalez@gmai.com"
import { tags ,projects,tools } from "../utils/data";

---



<Layout>
	
	<header  class=" w-4/5 sm:w-2/3  self-center flex  ">
		
		<div class="">
			<img class="w-full sm:w-32 " src="/void1499/images/tux.gif" alt="linux-tux">
		</div>
		<div class=" flex flex-col  justify-center">
			<h1 data-animation="slide-right" class=" font-semibold text-2xl sm:text-4xl text-start ">
				{title}
			</h1>
			<h2 data-animation="slide-right" class=" font-semibold text-1xl sm:text-2xl   text-start ">
				{subtitle}
				<br>
				<span class="text-sm sm:text-lg">
					{email}
				</span>
			</h2>
		</div>
	
	</header>
 

	<section  class="w-4/5 sm:w-2/3  self-center grid grid-cols-6 gap-5 " >

		{tools.map(item => (
					<div class="relative col-span-6 sm:col-span-2 row-span-10 rounded-md bg-darker/50 p-2 flex flex-col  overflow-hidden  "  >
						<div class="flex flex-wrap justify-center items-center   gap-1  h-full z-10 bg-transparent">
							{
								item.icons.map(icon=>(
									<IconLink  class="w-7  flex-initial m-0" src={`/void1499/icons/${icon}.svg`}  ></IconLink>
								))
							}
						</div>
						<span class="text-white-noise font-semibold text-end z-10">
							{item.subtitle}
						</span>
						<!--
						<div   class="scale-up delay-2  absolute w-32 h-32 bg-linear-to-r/decreasing from-indigo-500 to-teal-400 blur-2xl mx-auto inset-x-0 -top-1/2 ">
						</div>
						 -->
					</div>
			))}
		
	

	</section>

	
	<section class="w-4/5 sm:w-2/3  self-center flex flex-wrap gap-2 text-pill ">
		{tags.map(item => (
				<span class="px-3 py-1 text-white-noise rounded-full shadow-slate-950/50 shadow-sm">
					{item}
				</span>
			))}
	</section>
	
	<section class="w-4/5 sm:w-2/3  self-center flex flex-col gap-2   rounded-2xl">
		<h2 class=" font-semibold text-2xl text-white-noise ">
				Desarrollo integraci√≥n y despliegue
		</h2>
		
		</div>
		<p class="text-white-noise  ">
			Flujos de trabajo automatizados para entornos de <span class="font-bold text-amber-400">desarrollo</span> ,  <span class="font-bold text-amber-400">despliegue</span>  e  <span class="font-bold text-amber-400">integraci√≥n</span>  continua.
			<br>
			<span class="font-bold text-amber-400">
				Github Actions - Workflows -
				Docker - Github Container Registry
			</span> 	
		</p>
	</section>

	<!-- Proyectos -->
	<section class="w-4/5 sm:w-2/3  self-center flex flex-wrap gap-10 ">

		<h2 class="col-span-6 font-semibold text-2xl text-white-noise  w-full ">
			Proyectos üïπÔ∏è
		</h2>
		  {projects.map(project => (
			<div  class="relative flex flex-col gap-5 text-white-noise w-full rounded-sm overflow-hidden " >
				
				<h2 class="font-semibold text-2xl underline">
					{project.title}
				</h2>
				<p class="text-white-noise font-semibold">
					{project.description}
				</p>

					<span class=" w-full flex flex-wrap  gap-2">
					{
						project.tags.map(tag=>(
							<span class="px-3 py-1  rounded-full shadow-slate-950/50 shadow-sm">
								{tag}
							</span>
						))
					}
				</span>

				<span class=" w-full flex justify-end items-center gap-2">
					{
						project.links.map(link=>(
							<IconLink  class="w-7" src={`/void1499/icons/${link.icon}.svg`}  href={link.href} ></IconLink>
						))
					}
				</span>


			</div>
			))}
	</section>

	<div class="w-full h-screen fixed  top-0 -z-10 flex overflow-hidden ">

		<div class="absolute top-0 w-full h-full bg-black/90 " >

		</div>

		<div class="absolute top-0 w-full h-full bg-gradient-to-t from-emerald-500 z-10" >

		</div>
		
		<div class="w-full h-full grid-background">
		</div>
	</div>

	
</Layout>